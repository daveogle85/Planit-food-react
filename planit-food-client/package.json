{
  "name": "planit-food-client",
  "version": "0.1.0",
  "description": "An app to manage the weekly food shop",
  "private": true,
  "dependencies": {
    "@types/graphql": "^0.11.8",
    "@types/lodash.flowright": "^3.5.3",
    "@types/react-big-calendar": "^0.15.0",
    "@types/react-modal": "^3.1.1",
    "@types/react-router-dom": "^4.2.3",
    "apollo-client-preset": "^1.0.6",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "moment": "^2.20.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-apollo": "^2.0.4",
    "react-big-calendar": "^0.17.0",
    "react-dom": "^16.2.0",
    "react-modal": "^3.1.10",
    "react-responsive-carousel": "^3.1.30",
    "react-router-dom": "^4.2.2",
    "react-scripts-ts": "2.8.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts-ts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/node": "^9.3.0",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3"
  }
}
